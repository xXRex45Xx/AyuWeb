<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../Partials/head.ejs') %>
        <link rel="stylesheet" href="/css/HomePage/HomePage.css">
</head>

<body>
    <div class="wrapper">
        <%- include('../Partials/mainnav.ejs')%>
            <main class="mainContainer p-4">
                <div class="infoBoxContainer">
                    <div class="infoBox">
                        <div class="infoBox_text">
                            <h2 class="infoBox_value">
                                <%= HospitalizedPatients %>
                            </h2>
                            <h3 class="infoBox_tag">Hospitalized Patients</h3>
                        </div>
                        <img src="/Images/HomePageIcons/hospital_bed_80px.png" class="infoBox_image">
                    </div>
                    <div class="infoBox">
                        <div class="infoBox_text">
                            <h2 class="infoBox_value">
                                <%= TodaysPatients %>
                            </h2>
                            <h3 class="infoBox_tag">Today's Patients</h3>
                        </div>
                        <img src="/Images/HomePageIcons/patient_65px.png" class="infoBox_image">
                    </div>
                    <div class="infoBox">
                        <div class="infoBox_text">
                            <h2 class="infoBox_value">
                                <% if(TotalIncome===null){ %>0.00<% }else{ %>
                                        <%= TotalIncome %>
                                            <% } %>
                            </h2>
                            <h3 class="infoBox_tag">Today's Total Income</h3>
                        </div>
                        <img src="/Images/HomePageIcons/income_80px.png" class="infoBox_image">
                    </div>
                </div>
                <div class="container-fluid mt-5">
                    <div class="row justify-content-center align-items-center">
                        <div class="col">
                            <table class="table table-borderless">
                                <caption>This Week's Incomes</caption>
                                <thead>
                                    <th>Sun</th>
                                    <th>Mon</th>
                                    <th>Tue</th>
                                    <th>Wed</th>
                                    <th>Thu</th>
                                    <th>Fri</th>
                                    <th>Sat</th>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td>
                                            <% let incomeFound=WeekIncomes.find((income)=>
                                                income.DayOfWeek === 6) %>
                                                <% if(incomeFound){ %>
                                                    <%= incomeFound.TotalIncome %>
                                                        <% }else{ %>
                                                            <%= 0 %>
                                                                <% } %>
                                        </td>
                                        <td>
                                            <% incomeFound=WeekIncomes.find((income)=>
                                                income.DayOfWeek === 0) %>
                                                <% if(incomeFound){ %>
                                                    <%= incomeFound.TotalIncome %>
                                                        <% }else{ %>
                                                            <%= 0 %>
                                                                <% } %>
                                        </td>
                                        <td>
                                            <% incomeFound=WeekIncomes.find((income)=>
                                                income.DayOfWeek === 1) %>
                                                <% if(incomeFound){ %>
                                                    <%= incomeFound.TotalIncome %>
                                                        <% }else{ %>
                                                            <%= 0 %>
                                                                <% } %>
                                        </td>
                                        <td>
                                            <% incomeFound=WeekIncomes.find((income)=>
                                                income.DayOfWeek === 2) %>
                                                <% if(incomeFound){ %>
                                                    <%= incomeFound.TotalIncome %>
                                                        <% }else{ %>
                                                            <%= 0 %>
                                                                <% } %>
                                        </td>
                                        <td>
                                            <% incomeFound=WeekIncomes.find((income)=>
                                                income.DayOfWeek === 3) %>
                                                <% if(incomeFound){ %>
                                                    <%= incomeFound.TotalIncome %>
                                                        <% }else{ %>
                                                            <%= 0 %>
                                                                <% } %>
                                        </td>
                                        <td>
                                            <% incomeFound=WeekIncomes.find((income)=>
                                                income.DayOfWeek === 4) %>
                                                <% if(incomeFound){ %>
                                                    <%= incomeFound.TotalIncome %>
                                                        <% }else{ %>
                                                            <%= 0 %>
                                                                <% } %>
                                        </td>
                                        <td>
                                            <% incomeFound=WeekIncomes.find((income)=>
                                                income.DayOfWeek === 5) %>
                                                <% if(incomeFound){ %>
                                                    <%= incomeFound.TotalIncome %>
                                                        <% }else{ %>
                                                            <%= 0 %>
                                                                <% } %>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                <div class="row justify-content-center align-items-center mt-3">
                    <div class="col">
                        <div class="tableContainer">
                            <table class="table table-borderless">
                                <caption>Recent Payments</caption>
                                <thead>
                                    <tr>
                                        <th>Patient Name</th>
                                        <th>Details</th>
                                        <th>Price</th>
                                        <th>Phone Number</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr></tr>
                                    <% for(let payment of RecentPayments){ %>
                                        <tr>
                                            <td>
                                                <%= payment.PatientName %>
                                            </td>
                                            <td>
                                                <%= payment.PaymentDetails %>
                                            </td>
                                            <td>
                                                <%= payment.Price %>
                                            </td>
                                            <td>
                                                <%= payment.PhoneNumber %>
                                            </td>
                                        </tr>
                                        <% } %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </main>
    </div>
    <script src="/js/reception/HomePage.js"></script>
</body>

</html>