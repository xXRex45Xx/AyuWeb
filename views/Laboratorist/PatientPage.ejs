<!DOCTYPE html>
<html lang="en">

<head>
    <%- include("../Partials/head.ejs") %>
        <!-- <link rel="stylesheet" href="./Assets/bootstrap-5.1.3-dist/css/bootstrap.css"> -->
        <link rel="stylesheet" href="/css/PatientPage/info.css">
        <link rel="stylesheet" href="/css/PatientPage/PatientPage.css">
        <link rel="stylesheet" href="/css/ContainerNav.css">

</head>

<body>
    <div class="wrapper">
        <aside class="mainNav h-100">
            <img src="/Images/APHLogo.png" alt="" class="mainNav_logo">
            <a href="/<% if(type){ %><%= type %><% } %>/patientpage"
                class="mainNav_link <% if(page == 'patientpage') {%> mainNav_link--active <% } %>"><img
                    src="<%= page === 'patientpage' ? '/Images/NavIconsActive/patient_65px.png' : '/Images/NavIconsInactive/patient_white_40px.png' %> "
                    alt="" class="mainNav_linkImage">Patient
            </a>
        </aside>
        <script src="/js/mainnav.js"></script>
        <div class="mainContainer h-100">
            <nav class="containerNav">
                <button class="containerNav_link containerNav_search search">
                    <img class="containerNav_searchIcon" src="/Images/ContainerNavIcons/search_35px.png"
                        alt=""></button>
                <input type="tel" class="containerNav_searchPhone" name="searchPhone" placeholder="Phone Number">
                <button class="containerNav_link containerNav_info">
                    <img class="containerNav_linkIcon" src="/Images/ContainerNavIcons/general_information_25px.png"
                        alt="">Information</button>
                <button class="containerNav_link containerNav_labReport"><img class="containerNav_linkIcon"
                        src="/Images/ContainerNavIcons/laboratory_25px.png" alt="">Lab Report</button>
            </nav>
            <main class="container-fluid mainContainer_subContainer p-4">
                <%- include('../Partials/Flash/successflash.ejs') %>
            </main>
        </div>
    </div>
    <script src="/js/laboratorist/PatientPage.js"></script>
    <script src="/bootstrap-5.1.3-dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>